<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="561.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane layoutX="10.0" layoutY="10.0" maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="200.0"
                    style="-fx-background-color: BLACK;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" fillWidth="false" prefHeight="30.0" prefWidth="600.0"
                      AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="10.0">
                    <children>
                        <Label fx:id="gameId" alignment="CENTER" prefHeight="20.0"
                               style="-fx-background-color: white; -fx-background-radius: 20;" text="In game #id"
                               textFill="#000000">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                            <padding>
                                <Insets bottom="2.0" left="20.0" right="20.0" top="2.0"/>
                            </padding>
                        </Label>
                    </children>
                </VBox>
                <ImageView fx:id="maxIcon" fitHeight="30.0" fitWidth="30.0" layoutX="10.0" layoutY="10.0"
                           pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="10.0"
                           AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
                    <image>
                        <Image url="@../icons/max.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="openChatIcon" fitHeight="30.0" fitWidth="30.0" layoutX="10.0" layoutY="10.0"
                           onMouseClicked="#openChat" pickOnBounds="true" preserveRatio="true"
                           AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="70.0" AnchorPane.topAnchor="10.0">
                    <image>
                        <Image url="@../icons/chat.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="closeChatIcon" fitHeight="30.0" fitWidth="30.0" layoutX="20.0" layoutY="20.0"
                           onMouseClicked="#closeChat" pickOnBounds="true" preserveRatio="true"
                           AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="70.0" AnchorPane.topAnchor="10.0">
                    <image>
                        <Image url="@../icons/close.png"/>
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
        <VBox alignment="CENTER" minHeight="50.0" prefHeight="100.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
            <children>
                <Label alignment="CENTER" text="Waiting for players..." textAlignment="CENTER">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="80.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0">
            <children>
                <HBox fx:id="playerList" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                </HBox>
            </children>
        </VBox>
        <VBox alignment="CENTER" prefWidth="100.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">
            <children>
                <Button fx:id="startButton" mnemonicParsing="false" onAction="#start"
                        style="-fx-background-color: black;" text="Start" textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
            </children>
        </VBox>
        <AnchorPane fx:id="chatPane" layoutX="231.0" prefHeight="356.0" prefWidth="314.0" translateX="400.0"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0"/>
    </children>
</AnchorPane>
