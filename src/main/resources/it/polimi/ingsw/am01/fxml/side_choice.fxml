<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<fx:root alignment="CENTER" spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="playerNameLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="105.0"
               style="-fx-background-color: black; -fx-border-radius: 20; -fx-background-radius: 20;" text="PlayerName"
               textFill="WHITE">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <ImageView fx:id="cardImage" fitHeight="95.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"
                   visible="false"/>
    </children>
</fx:root>
