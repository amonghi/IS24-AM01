<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="576.0" prefWidth="942.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="576.0" prefWidth="942.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">
            <children>
                <AnchorPane maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="200.0"
                            style="-fx-background-color: BLACK;">
                    <children>
                        <VBox alignment="CENTER" fillWidth="false" prefHeight="30.0" prefWidth="600.0"
                              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                              AnchorPane.topAnchor="10.0">
                            <children>
                                <Label fx:id="gameId" alignment="CENTER" prefHeight="20.0"
                                       style="-fx-background-color: white; -fx-background-radius: 20;"
                                       text="In game #id" textFill="#000000">
                                    <font>
                                        <Font name="System Bold" size="16.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="2.0" left="20.0" right="20.0" top="2.0"/>
                                    </padding>
                                </Label>
                            </children>
                        </VBox>
                        <ImageView fx:id="maxIcon" fitHeight="30.0" fitWidth="30.0" layoutX="10.0" layoutY="10.0"
                                   pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="10.0"
                                   AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
                            <image>
                                <Image url="@../icons/max.png"/>
                            </image>
                        </ImageView>
                        <ImageView fx:id="openChatIcon" fitHeight="30.0" fitWidth="30.0" layoutX="10.0" layoutY="10.0"
                                   onMouseClicked="#openChat" pickOnBounds="true" preserveRatio="true"
                                   AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="70.0"
                                   AnchorPane.topAnchor="10.0">
                            <image>
                                <Image url="@../icons/chat.png"/>
                            </image>
                        </ImageView>
                        <ImageView fx:id="closeChatIcon" fitHeight="30.0" fitWidth="30.0" layoutX="20.0" layoutY="20.0"
                                   onMouseClicked="#closeChat" pickOnBounds="true" preserveRatio="true"
                                   AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="70.0"
                                   AnchorPane.topAnchor="10.0">
                            <image>
                                <Image url="@../icons/close.png"/>
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
                <Label fx:id="titleLabel" text="Choose your secret objective!">
                    <font>
                        <Font size="22.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="30.0"/>
                    </VBox.margin>
                </Label>
                <VBox alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="30.0" top="20.0"/>
                    </VBox.margin>
                    <children>
                        <HBox fx:id="playersBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefHeight="185.0" prefWidth="892.0"
                      style="-fx-border-color: black; -fx-border-radius: 20; -fx-padding: 20;">
                    <children>
                        <Button fx:id="firstObjectiveButton" maxHeight="218.0" maxWidth="320.0" minHeight="218.0"
                                minWidth="320.0" mnemonicParsing="false" onAction="#selectChoice" prefHeight="218.0"
                                prefWidth="320.0" style="-fx-background-color: black; -fx-background-radius: 20;">
                            <graphic>
                                <ImageView fx:id="firstObjectiveImage" fitHeight="188.0" fitWidth="340.0"
                                           pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                            <HBox.margin>
                                <Insets right="30.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="secondObjectiveButton" maxHeight="218.0" maxWidth="320.0" minHeight="218.0"
                                minWidth="320.0" mnemonicParsing="false" onAction="#selectChoice" prefHeight="218.0"
                                prefWidth="320.0" style="-fx-background-color: transparent; -fx-background-radius: 20;">
                            <graphic>
                                <ImageView fx:id="secondObjectiveImage" fitHeight="188.0" fitWidth="340.0"
                                           pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                            <HBox.margin>
                                <Insets left="30.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="400.0" right="400.0"/>
                    </VBox.margin>
                </HBox>
                <Button fx:id="confirmButton" maxHeight="50.0" maxWidth="200.0" minHeight="50.0" minWidth="200.0"
                        mnemonicParsing="false" onAction="#confirm" prefHeight="50.0" prefWidth="200.0"
                        style="-fx-background-color: BLACK;" text="Confirm your choice" textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
            </children>
        </VBox>
        <AnchorPane fx:id="chatPane" layoutX="676.0" layoutY="51.0" prefHeight="525.0" prefWidth="356.0"
                    translateX="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="50.0"/>
    </children>
</AnchorPane>
