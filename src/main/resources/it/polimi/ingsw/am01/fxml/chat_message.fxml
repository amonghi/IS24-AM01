<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root alignment="CENTER_LEFT" maxWidth="340.0" minWidth="340.0" prefWidth="340.0"
         style="-fx-background-color: transparent;" type="HBox" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane maxWidth="300.0" minHeight="100.0" minWidth="300.0" prefHeight="100.0" prefWidth="300.0"
                    style="-fx-background-color: transparent; -fx-background-radius: 10;"
                    stylesheets="@../css/chat-msg.css">
            <children>
                <TextArea fx:id="message" editable="false" focusTraversable="false" layoutX="14.0" layoutY="-76.0"
                          maxWidth="300.0" minHeight="70.0" minWidth="300.0" prefHeight="70.0" prefWidth="300.0"
                          wrapText="true" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="30.0"/>
                <HBox maxHeight="20.0" maxWidth="200.0" minHeight="20.0" minWidth="20.0" prefHeight="20.0"
                      prefWidth="200.0" spacing="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="5.0">
                    <children>
                        <Label fx:id="senderLabel"
                               style="-fx-background-color: black; -fx-text-fill: white; -fx-padding: 2; -fx-background-radius: 5;"
                               text="Sender"/>
                        <Label style="-fx-padding: 2;" text="to"/>
                        <Label fx:id="recipientLabel"
                               style="-fx-background-color: black; -fx-text-fill: white; -fx-padding: 2; -fx-background-radius: 5;"
                               text="Recipient"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0"/>
                    </padding>
                </HBox>
                <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" maxHeight="20.0" maxWidth="200.0"
                      minHeight="20.0" minWidth="20.0" prefHeight="20.0" prefWidth="200.0" spacing="5.0"
                      AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0">
                    <children>
                        <Label fx:id="timeLabel"
                               style="-fx-background-color: black; -fx-text-fill: white; -fx-padding: 2; -fx-background-radius: 5;"
                               text="Timestamp"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0"/>
                    </padding>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</fx:root>
